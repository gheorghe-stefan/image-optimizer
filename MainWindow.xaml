<Window x:Class="ImageOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageOptimizer"
        mc:Ignorable="d"
        Title="Image optimizer" Height="396" Width="503">
    <Grid AllowDrop="True" Margin="0,0,10,12">
        <CheckBox Content="Keep image ratio" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="LockRationClick" Name="chkLock"/>
        <TextBlock HorizontalAlignment="Left" Margin="108,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="40" Text="Height: "/>
        <TextBox HorizontalAlignment="Left" Margin="150,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" Name="txtHeight"/>
        <TextBox HorizontalAlignment="Left" Margin="48,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" Name="txtWidth"/>
        <TextBox HorizontalAlignment="Left" Height="315" Margin="10,53,0,0" TextWrapping="Wrap" Text="Log" VerticalAlignment="Top" Width="483" Name="txtLog" AllowDrop="true"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="40" Text="Width:"/>
    </Grid>
</Window>
